@using homework.Domain.Models
@model homework.Domain.Models.Screaning

@{
    ViewData["Title"] = "Edit";

    List<Movie> movies = (List<Movie>)ViewData["Movies"];
}

<h1>Edit</h1>

<h4>Screaning</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxTickets" class="control-label"></label>
                <input asp-for="MaxTickets" class="form-control" />
                <span asp-validation-for="MaxTickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class="form-control">
                    @{
                        foreach (var movie in movies)
                        {
                            <option value="@movie.Id">@movie.Name</option>
                        }
                    }
                </select>
                @*                <span asp-validation-for="MovieId" class="text-danger"></span>*@
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
